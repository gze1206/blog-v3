@{
    var layoutModel = (LayoutModel)ViewBag.LayoutModel;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - blog.gze1206.net</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    @if (layoutModel.IsDarkMode){
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-night.css" />
    }
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/lib/toast-ui/toastui-editor.css" />
    <link rel="stylesheet" href="~/lib/toast-ui/toastui-editor-dark.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/blog.gze1206.net.styles.css" asp-append-version="true" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/toast-ui/toastui-editor-all.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</head>
<body>
<header>
    <div class="form-check form-switch position-absolute top-0 end-0 m-2">
        <input class="form-check-input" type="checkbox" checked="@(layoutModel.IsDarkMode ? "true" : "false")" />
        <label>Dark Mode</label>
    </div>
    <div class="text-center text-uppercase">
        <p class="fw-lighter fs-3 m-0">test line</p>
        <p class="fw-bolder fs-1">blog.gze1206.net</p>
    </div>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom border mb-3 @(layoutModel.IsDarkMode ? "navbar-dark" : "navbar-light")">
        <div class="container-fluid">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse text-center text-uppercase d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1 justify-content-center">
                    <li class="vr divider"></li>
                    <li class="nav-item">
                        <a class="nav-link text-body" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="vr divider"></li>
                    <li class="nav-item">
                        <a class="nav-link text-body" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    </li>
                    <li class="vr divider"></li>
                    <form>
                        <input class="ms-1" style="border: none;height: 100%;" type="search" placeholder="Search..."/>
                        <button class="btn btn-link text-body"><i class="bi bi-search"></i></button>
                    </form>
                    <li class="vr divider"></li>
                </ul>
            </div>
        </div>
    </nav>
</header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - blog.gze1206.net - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
</body>
</html>